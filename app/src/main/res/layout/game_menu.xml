<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94bbe9"
    android:padding="16dp"
    tools:context=".MainMenuActivity">

    <Button
        android:id="@+id/button_settings"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:text="Settings"
        android:textSize="19sp"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/button_play"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_settings"
        android:layout_toEndOf="@id/button_settings"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/button_color_2"
        android:text="PLAY!"
        android:textSize="19sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button_play"
        android:layout_toEndOf="@id/button_play"
        android:layout_marginStart="16dp"
        android:text="Exit"
        android:textSize="19sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/points_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-2dp"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="$: 0"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/stamina_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/points_counter"
        android:layout_marginTop="-60dp"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="Energy : 110/110"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
</RelativeLayout>